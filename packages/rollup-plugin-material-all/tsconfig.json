{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"inlineSources": true,
		"outDir": "lib",
		"rootDir": "src",
		"paths": {
			"shared/*": ["../shared/src/*"]
		}
	}
}
